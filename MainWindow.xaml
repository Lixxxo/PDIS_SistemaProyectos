<Window x:Class="SistemaProyectos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaProyectos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
    xmlns:System="clr-namespace:System;assembly=System.Runtime">
    <Window.Resources>
        <System:String x:Key="lblProject">Proyectos</System:String>
        <System:String x:Key="lblJob">Tareas</System:String>
        <System:String x:Key="btnCreateProject">Crear Proyecto</System:String>
        <System:String x:Key="btnCreateJob">Crear Tarea</System:String>
        <System:String x:Key="btnAsignMaterial">Asignar Material</System:String>
    </Window.Resources>
    <Grid Margin="10">
        
        <StackPanel x:Name="stackProjects" VerticalAlignment="Top">

            <Label x:Name="lblProject" FontFamily="Consolas" FontSize="36"
                   Content="{DynamicResource lblProject}">
                
            </Label>
            <DataGrid x:Name="dgProjects"
                      >
                <DataGrid.Columns>

                    <DataGridTextColumn Header="Id" />
                    <DataGridTextColumn Header="Nombre"/>
                    <DataGridComboBoxColumn Header="Estado" />

                </DataGrid.Columns>
            </DataGrid> 

        </StackPanel>

        <StackPanel x:Name="stackJobs" VerticalAlignment="Center">

            <Label x:Name="lblJobs" FontFamily="Consolas" FontSize="36"
                   Content="{DynamicResource lblJob}">
            </Label>
            <DataGrid x:Name="dgJobs" >
            </DataGrid>

        </StackPanel>

        <StackPanel x:Name="stackButtons" Margin="440,10,10,10">
            <Button x:Name="btnCreateProject"
                    Content="{DynamicResource btnCreateProject}" 
                    Margin="10,10,10,10"
                    Height="90" FontFamily="Consolas" FontSize="24" Click="btnCreateProject_Click">
                
            </Button>
            <Button x:Name="btnCreateJob"
                    Content="{DynamicResource btnCreateJob}" 
                    Margin="10,10,10,10"
                    Height="90" FontFamily="Consolas" FontSize="24">

            </Button>
            <Button x:Name="btnAsignMaterial"
                    Content="{DynamicResource btnAsignMaterial}" 
                    Margin="10,70,10,10" 
                    Height="90" FontFamily="Consolas" FontSize="24">

            </Button>
        </StackPanel>
    </Grid>
</Window>
